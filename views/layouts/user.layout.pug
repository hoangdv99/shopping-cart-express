doctype html
html
  head
    title Shopping Pro
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.7/dist/jquery.fancybox.min.css")
    link(rel="stylesheet", href="/style/custom.css")
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css')
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js")
  body
    .ajaxbg
      .ajaxinner
        h3 You are now being redirected to paypal...
        img(src="/images/ajax-loader.gif", alt="")
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark.fixed-top
      a.navbar-brand(href='/') Shopping Pro
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExampleDefault', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarsExampleDefault.collapse.navbar-collapse
        ul(class="navbar-nav mr-auto")
          each page in pages
            if page.slug == "home"
              li(class="nav-item")
                a.nav-link(href="/")= page.title
            else
              li(class="nav-item")
              a.nav-link(href= page.slug)= page.title
        ul(class="navbar-nav narbar-right mr-auto")
          li(class="nav-item")
            a.nav-link(href="/cart/checkout") My Cart
              if typeof cart !== "undefined"
                span= " ("+cart.length+")"
              else
                span= " (0)"
          li(class="nav-item")
            a.nav-link(href="/users/register") Register
          li(class="nav-item")
            a.nav-link(href="/users/login") Login
        
    .container.pt-5
    .container
      .row
        div(class="col-xs-12 col-md-3")
          h3 Categories
          ul.list-group
            li.list-group-item
              a(href="/products") All products
              each category in categories
                li.list-group-item
                  a(href="/products/"+category.slug)= category.title
        div(class="col-xs-12 col-md-1")
        div(class="col-xs-12 col-md-8")
          block content
    hr
    p.text-center &COPY; Shopping Pro
    //script(src="https://cdn.jsdelivr.net/npm/jquery@3.4.1/dist/jquery.min.js")
    script(src="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.7/dist/jquery.fancybox.min.js")
    script(src="https://cdn.ckeditor.com/4.13.1/standard/ckeditor.js")
    script(src="/js/main.js")
        block footer
        