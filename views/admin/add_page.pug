extends ../layouts/admin.layout.pug
block content
    h2.page-title Add a page

    br
    if errors
        each error in errors
            .alert.alert-danger= error
    form(action="/admin/page/add-page", method="POST")
        .form-group
            label(for="title") Title
            input#title.form-control(type="text", name="title", value=values?values.title:'')
        .form-group
            label(for="slug") Slug
            input#slug.form-control(type="text", name="slug", value=values?values.slug:'')      
        .form-group
            label(for="content") Content
            textarea#content.form-control(name="content", cols="30", rows="7", value=values?values.content:'')
        button.btn.btn-primary Submit
    block footer
    